@model SignUp
<h1>Sign-up</h1>
<form  method="post">
  
  <div class="container">
    <label asp-for="UserId"><b>Username</b></label>
    <input asp-for="UserId" type="text" placeholder="Enter Username" >
    <span asp-validation-for="UserId" class="text-danger" ></span>

    <label asp-for="Password"><b>Password</b></label>
    <input type="password" asp-for="Password" placeholder="Enter Password">
    <span asp-validation-for="Password" class="text-danger" ></span>

    <label asp-for="ConfirmPassword"><b>Confirm Password</b></label>
    <input type="password" asp-for="ConfirmPassword" placeholder="Enter Password"  >
    <span asp-validation-for="ConfirmPassword" class="text-danger" ></span>
    <button type="submit">Login</button>
    
  </div>

</form>